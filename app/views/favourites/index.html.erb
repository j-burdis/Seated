<%# <h1>Favourites#index</h1> %>
<%# <p>Find me in app/views/favourites/index.html.erb</p> %>
<div class="container">
  <div class="row">
    <div class="col">


    <div class="favourites-cinema-list-card">
      <h1>List of Favourite Cinemas</h1>
      <% @favourites.each do |favourite| %>
        <div class="favourite-cinema-card">
          <div class="favourite-cinema-title">
            <h3><%= favourite.cinema.name %></h3>
            <%#= button_to cinema_favourite_path(favourite.cinema, favourite), method: :delete, remote: true, class: 'remove-favourite-btn' do %>
              <i class="fa-solid fa-x"></i>
            <%# end %>
          </div>
          <div class="favourite-cinema-image-card">
            <img src="<%= favourite.cinema.image_url %>" alt="<%= favourite.cinema.name %>">
            <div class="favourite-card-description">
              <p><%= favourite.cinema.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>


    </div>
  </div>
</div>
