<div class="cinema-index-background">
  <div class="container">
    <div class="row">
      <div class="col">

        <div class="favourite-index-content">

          <h1>Your Favourites</h1>

          <div class="favourite-cinema-cards">
            <div class="home-top-picks" id="favourites">
              <% if @favourites.empty? %>
                <p class="no-favourite-message">It's awful quiet...</p>
              <% else %>
                <%= render "favourites/favourite_list", favourites: @favourites %>
              <% end %>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>
