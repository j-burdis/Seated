<div class="container">
  <div class="row">
    <div class="col">
      <%# <h2>Log in</h2> %>
      <div class="logo-title">
        <div class="header-logo">
          <%#= link_to root_path do %>
            <h1>Seated</h1>
            <%= image_tag "seated-chair-no-background.png", alt:"Logo Seat", class: "header-logo-seat"%>
          <%# end, class: 'header-logo-link' %>
        </div>
      </div>
      <div class="login-form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%# <%= f.input :username,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions" style="justify-content: center; display: flex">
            <%= f.button :submit, "Log in", class: "btn btn-gradient" %>
          </div>
        <% end %>
        <p></p>
        <%= render "devise/shared/links" %>
        <%= link_to "Back to home page", root_path, class: "auth-links" %>
      </div>
    </div>
  </div>
</div>
