<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Seated" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="<%= image_path('favicon.ico') %>" type="image/x-icon">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %> 
    <%#= turbo_include_tags %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&family=Work+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>

  <body>
    <%# unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) %>
    <% unless devise_controller? && (controller_name == 'sessions' || controller_name == 'registrations' || controller_name == 'passwords') %>
      <%= render "shared/header" %>
    <% end %>
    <%#= render "shared/flashes" %>

    <%= yield %>

    <%# unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) || current_page?(new_user_password_path) %>
    <% unless devise_controller? && (controller_name == 'sessions' || controller_name == 'registrations' || controller_name == 'passwords') %>
      <%= render "shared/bottom_navbar" %>
    <% end %>
  </body>
</html>
